#!/usr/bin/env bash

# shellcheck disable=SC2068
yt-dlp \
    -f bestaudio \
    --audio-format best \
    --audio-quality 0 \
    --extract-audio \
    --embed-thumbnail \
    --embed-metadata \
    --embed-chapters \
    --embed-info-json \
    --embed-subs \
    --xattrs \
    --video-multistreams \
    --audio-multistreams \
    --add-metadata \
    --audio-format mp3 \
    --yes-playlist \
    -N "$(nproc --all)" \
    -o "%(uploader)s - %(title)s.%(ext)s" \
    $@
