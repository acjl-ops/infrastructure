[core]
	editor = "nvim --clean"
	excludesfile = ~/.gitignore
	commitGraph = true
[color]
	ui = true
[user]
	email = contact@lsferreira.net
	name = Lu√≠s Ferreira
	signingkey = 730750D54B7A9F66
[log]
	utf8 = true
[init]
	templatedir = ~/.git-templates
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[pull]
	ff = only
[alias]
	c = commit -s
	s = status
	b = branch
	co = checkout
	cp = cherry-pick
	unstage = reset HEAD --
[gpg]
	program = gpg2
[commit]
	gpgsign = true
