#!/bin/sh -i

if [ ! -d ~/Sync/ ]; then
  echo "Please setup your Sync folder first!"
  exit 1
fi

if [ "$EDITOR" != "" ]; then
  if [ "$(basename "$EDITOR")" = "nvim" ]; then
    ETODO_EDITOR_ARGS="+"
  else
    ETODO_EDITOR_ARGS=""
  fi
  "$EDITOR" "$ETODO_EDITOR_ARGS" ~/Sync/TODO.md
else
  # fallback to vi
  vi ~/Sync/TODO.md
fi
